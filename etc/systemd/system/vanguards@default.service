[Unit]
Description=Additional protections for Tor onion services
Wants=tor_service
After=network.target nss-lookup.target

[Service]
WorkingDirectory=data_dir/vanguards
ExecStart=/usr/bin/python3 src/vanguards.py
Environment=VANGUARDS_CONFIG=torrc_root/vanguards.conf
User=tor_user
Group=tor_user
Type=simple
Restart=always

[Install]
WantedBy=multi-user.target
